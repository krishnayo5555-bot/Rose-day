    <script>
        function moveButton() {
            const btn = document.getElementById('noBtn');
            // Move button to random positions within the viewport
            const x = Math.random() * (window.innerWidth - btn.clientWidth - 50);
            const y = Math.random() * (window.innerHeight - btn.clientHeight - 50);
            
            btn.style.position = 'fixed';
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        }

        function celebrate() {
            const response = document.getElementById('response');
            response.innerHTML = "Thank you for forgiving me! ü•∞ I love you so much. Happy Rose Day!";
            document.getElementById('noBtn').style.display = 'none';
            document.getElementById('yesBtn').style.transform = 'scale(1.2)';
            
            // Create a small rose shower effect (alert for now)
            alert("üåπüåπüåπ Happy Rose Day! üåπüåπüåπ");
        }
    </script>
